<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#080808"
            android:background="#ee9873"

            android:layout_marginTop="2dp"
            android:text="PROGRAMMABLE TIMER"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#080808"
            android:id="@+id/device"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Timer1"
        android:textColor="#080808"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="START:"
        android:textSize="20dp"
        android:textColor="#1b1b1b"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="hh:mm"
            android:id="@+id/start"
            ></EditText>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="END:"
            android:textColor="#1b1b1b"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="hh:mm"
            android:id="@+id/end"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/reset1"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button2"
            android:text="Reset"></Button>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Timer2"
            android:textColor="#080808"
            android:textSize="30dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="START:"
                android:textColor="#1b1b1b"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="hh:mm"
                android:id="@+id/starttimer2"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="END:"
                android:textColor="#1b1b1b"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="hh:mm"
                android:id="@+id/endtimer2"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/reset2"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button2"
            android:text="Reset"></Button>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_marginLeft="25dp"
        android:layout_height="50dp"
        android:text="submit"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button1"
        android:id="@+id/submittimer2"
        />
    <Button
        android:layout_width="200dp"
        android:layout_marginLeft="25dp"
        android:layout_height="50dp"
        android:text="Device Time"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button1"
        android:id="@+id/devicetime"
        />
</LinearLayout>